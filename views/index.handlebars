<div class="row">
    <div class="col-sm-6">
        <div class="card special-card">
            <div class="card-body">
                <h2>Rub a Dub Dub!</h2>
                {{#each burgers}} {{#unless this.devoured}}
                <div class="list-group">

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <span>{{this.id}}. {{this.burger_name}}</span>
                        <button type="submit" class="btn btn-sm float-right">Eat Up</button>
                    </form>

                </div>
                {{/unless}} {{/each}}
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card special-card">
            <div class="card-body">
                <h2>Thanks for the grub!</h2>
                <ul>
                    {{#each burgers}} {{#if this.devoured}}

                    <li>
                        <div>
                            <span>{{this.id}}. {{this.burger_name}}</span>
                        </div>
                    </li>

                    {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>